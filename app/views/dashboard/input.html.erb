<h1>Dashboard#input</h1>
<p><%= @customer.meter_number %></p>
<p><%= @customer.name %></p>
<p><%= @customer.address %></p>

<%= form_with(url: dashboard_submit_path, local: true) do |f| %>
  <%= f.label :meter_unit, "Inout meter unit" %>
  <%= f.number_field :meter_unit, required: true %>

  <%= f.submit "Submit", disable_with: 'Submiting...' %>
<% end %>
